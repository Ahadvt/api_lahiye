@model EntitiesDtos
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="card-body row">
        <h1 style="text-align:center; margin-bottom:20px;">Author Create</h1>
        <form method="post" class="forms-sample" enctype="multipart/form-data">
            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
            <div style="width:40%; margin-bottom:40px; padding-left:70px; ">
                <label style="margin-bottom:10px;  font-size:20px;" font-size:20px;" asp-for="@Model.postDtos.Imagefile">Book image</label>
                <input asp-for="@Model.postDtos.Imagefile" accept="image/*" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@Model.postDtos.Imagefile"></span>

            </div>
            <div class="d-flex justify-content-evenly">
                <div style="width:40%;">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.postDtos.Name">Name </label>
                    <input class="form-control" asp-for="@Model.postDtos.Name" type="text" id="editor1">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.postDtos.Name"></span>
                </div>
                <div style="width:40%;">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.postDtos.Title">Title </label>
                    <input class="form-control" asp-for="@Model.postDtos.Title" type="text" id="editor1">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.postDtos.Title"></span>
                </div>
                <div style="width:40%;">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.postDtos.SalePrice">SalePrice </label>
                    <input class="form-control" asp-for="@Model.postDtos.SalePrice" type="number" id="editor1">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.postDtos.SalePrice"></span>
                </div>
                <div style="width:40%;">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.postDtos.CostPrice">CostPrice </label>
                    <input class="form-control" asp-for="@Model.postDtos.CostPrice" type="number" id="editor1">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.postDtos.CostPrice"></span>
                </div>
                <div style="width:40%;">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.postDtos.Description">Description </label>
                    <input class="form-control" asp-for="@Model.postDtos.Description" type="text" id="editor1">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.postDtos.Description"></span>
                </div>
                <div style="width:40%;">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.postDtos.AuthorId">Author </label>
                    <select class="form-select" asp-for="@Model.postDtos.AuthorId">
                        @foreach (var item in Model.Authors.Items)
                        {
                            <option value="@item.Id">@item.FullName</option>
                        }
                    </select>
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.postDtos.Description"></span>
                </div>
                <div style="width:40%;">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.postDtos.JanrId">Janr </label>
                    <select class="form-select" asp-for="@Model.postDtos.JanrId">
                        @foreach (var item in Model.Janrs.Items)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.postDtos.Description"></span>
                </div>
                <p>id:@Model.postDtos.Id</p>
            </div>
            <div class="col-md-12 mt-3">
                <a class="btn btn-dark" asp-controller="slider" asp-action="index"><i class="fas fa-undo"></i> Back</a>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>

